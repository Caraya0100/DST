<UserControl x:Class="InterfazGrafica.GraficoGauge360"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterfazGrafica"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <lvc:Gauge Grid.Row="1" Uses360Mode="True" From="0" To="2" FromColor="Lime"
                   Value="{Binding Value}" LabelFormatter="{Binding Formatter}" />
    </Grid>
</UserControl>
